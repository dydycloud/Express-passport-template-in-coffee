doctype html
html
  head
    title Passport Local Mongoose Coffee Jade Example
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootflat.min.css')
    block scripts
      script(src='/js/jquery-1.11.0.min.js')
      script(src='/js/bootstrap.min.js')
  body
    nav.navbar.navbar-default(role='navigation')
      div.container-fluid
        div.navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-3')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#', style="font-size:30px") Mnk-Express-Passport
          if (typeof(user) == 'undefined')
            a.navbar-brand(href='/register') Register
            a.navbar-brand(href='login') Login
          else
            a.navbar-brand(href="/logout") Log Out
        div.collapse.navbar-collapse
          if (user)
            p.navbar-text.navbar-right
              a.navbar-link(href='') You are currently logged in as #{user.username}
    .container
      block content
